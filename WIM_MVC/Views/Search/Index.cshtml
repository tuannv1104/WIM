@using PagedList;
@using PagedList.Mvc;

@model IPagedList<WIM_MVC.Models.EntityFramework.Trans_VehicleInfo>

@section scripts
{
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <script>
        var date = new Date();
        date.setDate(date.getDate() - 1);
        $(function () {
            $('#datetimepicker1').datetimepicker({
                defaultDate: date,
                format: 'DD/MM/YYYY HH:mm:ss'

            });
        });
    </script>
    <script>
        $(function () {
            $('#datetimepicker2').datetimepicker({
                defaultDate: Date.now(),
                format: 'DD/MM/YYYY HH:mm:ss'
            });
        });
        var submittime = Date.now();
        function ajaxfail(objXHR, status, errorThrown)
        {
            var timeout = Date.now() - submittime;
                if (submitcount <= 30000)
                {
                    $("#searchform").submit();
                }
                else
                {
                    submittime = now();
                    $('.overlay').hide();
                    $('.waiting').hide();
                    window.location.href = "@Url.Action("ConnectionFailed", "Search")";
                }
        }
        function ajaxsuccess()
        {
            $('.overlay').hide();
            $('.waiting').hide();
            submitcount = 0;
            addrowheader();
        }
        function btnsearchclick() {
                $('.overlay').show();
                $('.waiting').show();
                timeout = 0;
            };
        
    </script>

    <script type="text/javascript" src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}




