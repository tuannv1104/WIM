@model WIM_MVC.Models.EntityFramework.AspNetUser

@{
    ViewBag.Title = "Xóa tài khoản";
}

<h3>@ViewBag.Title</h3>

<h3>Bạn có chắc xóa tài khoản không?</h3>
<div>
    @*<h4>AspNetUser</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Resources.TableHeader.User_UserName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Resources.TableHeader.User_LastName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Resources.TableHeader.User_FirstName
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xóa" class="btn btn-default" />
                | @Html.ActionLink("Trở về", "Index")
            </div>
        </div>
        @*<div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>*@
    }
</div>
